<div class="container mt-4">
  <div class="row ">
    <div class="col-6 mt-3 mx-auto text-center">
      <h2 class=>投稿詳細</h2>
      <div class="mt-4 mb-2">
        <p><%= image_tag @post.get_image, class: "img-fluid", style:"width: 250px;" %></p>
      </div>
      <div class="d-flex align-items-center justify-content-center">
        <div class="rounded-circle" style="width: 50px; height: 50px; overflow: hidden;">
          <%= link_to user_path(@post.user) do %>
            <span><%= image_tag @post.user.get_profile_image, alt: "image", style: "width: 100%; height: 100%;" %></span>
          <% end %>
        </div>
        <span class="ml-2"><%= @post.user.name %></span>
      </div>
        <div>
          <span class="font-weight-bold" style="font-size: 20px;"><%= @post.store %></span>
          <span><%= @post.created_at.strftime('<span style="font-size: 12px;">%Y/%m/%d</span>').html_safe %></span>
          <% if @post.user == current_user %>
            <%= link_to "削除", post_path(@post), method: :delete, class: "btn btn-success" %>
          <% end %>
        </div>

        <div><%= @post.menu %></div>
        <span id="favorite_buttons_<%= @post.id %>">
            <%= render 'favorites/btn', post: @post %>
        </span>
        <i class="far fa-comment fa-2x" style="color: #bc2424;"></i><span id="comment-count"><%= @post.post_comments.count %>件</span>
        <p><%= @post.address %></p>
        <p><%= @post.impressions %></p>
      
      
      <!--コメント欄-->
      <div id="post-comments">
        <%= render 'post_comments/index', post: @post %>
      </div>
      <div id="post-comments/form">
        <%= render 'post_comments/form', post: @post, post_comment: @post_comment %>
      </div>
    </div>
  </div>
</div>