<div class="container mt-4">
  <div class="row ">
    <div class="col-6 mt-3 mx-auto text-center">
      <h2 class=>投稿詳細</h2>
      <div class="mt-4 mb-2">
        <p><%= image_tag @post.get_image, class: "post-image img-fluid" %></p>
      </div>
      <div class="d-flex align-items-center justify-content-center">
        <div>
          <%= link_to user_path(@post.user) do %>
            <span><%= image_tag @post.user.get_profile_image, alt: "image", class: "small-profile-image img-fluid rounded-circle" %></span>
          <% end %>
        </div>
        <span class="ml-2"><%= @post.user.name %></span>
      </div>
        <div>
          <span class="text-bold font-weight-bold"><%= @post.store %></span>
          <span class="created-at"><%= @post.created_at.strftime('%Y/%m/%d') %></span>
          <% if @post.user == current_user %>
            <%= link_to "編集", edit_post_path(@post.id), class: "btn btn-success btn-sm" %>
            <%= link_to "削除", post_path(@post), method: :delete, "data-confirm" => "本当に削除しますか？" , class: "btn btn-danger btn-sm" %>
          <% end %>
        </div>

        <div><%= @post.menu %></div>
        <span id="favorite_buttons_<%= @post.id %>">
            <%= render 'favorites/btn', post: @post %>
        </span>
        <i class="far fa-comment fa-2x" style="color: #bc2424;"></i><span id="comment-count"><%= @post.post_comments.count %>件</span>
        <p><%= @post.address %></p>
        <p><%= @post.impressions %></p>


      <!--コメント欄-->
      <div id="post-comments">
        <%= render 'post_comments/index', post: @post %>
      </div>
      <div id="post-comments/form">
        <%= render 'post_comments/form', post: @post, post_comment: @post_comment %>
      </div>
    </div>
  </div>
</div>