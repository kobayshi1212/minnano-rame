<div class="container mt-4">
  <div class="row">
    <div class="col-md-4 mt-3 mx-auto ">
      <h2 class="text-center">投稿編集</h2>
      <%= render 'layouts/post_errors', post: @post %>
      <%= form_with model: @post do |f| %>
        <div class="form-group">
          <%= f.label :画像, class: "mt-4" %>
          <%= f.file_field :image, accept: "image/*" %>
        </div>
        <div class="form-group">
          <%= f.label :店名 %>
          <%= f.text_field :store, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :住所 %>
          <%= f.text_field :address, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :メニュー %>
          <%= f.text_field :menu, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :感想 %>
          <%= f.text_area :impressions, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit '投稿' %>
        </div>
      <% end %>
    </div>
  </div>
</div>