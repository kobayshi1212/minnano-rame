<div class="container">
  <h2 class="mt-4 mb-4 text-center">みんなのラーメン一覧</h2>
  <div class="row">
    <div class="col-12  mb-4">
      <% @posts.each do |post| %>
        <div class="text-center">
          <%= link_to post_path(post.id) do %>
            <%= image_tag post.get_image, class: "img-fluid", style:"width: 400px;" %>
          <% end %>
          <div class="mt-4 mx-auto"><%= image_tag "243183860.jpg", class: "img-fluid", style: "width: 400px;" %></div>
        </div>
      <% end %>
      <div class="mb-4 d-flex justify-content-center" style="font-size: 25px;"><%= paginate @posts %></div>
    </div>
  </div>
</div>
