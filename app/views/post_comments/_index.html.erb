<% post.post_comments.each do |post_comment| %>
  <div>
    <span>
      <%= link_to user_path(post_comment.user) do %>
        <%= image_tag post_comment.user.get_profile_image(50,50), class: "rounded-circle small-profile-image" %>
      <% end %>
      </span>
    <span><%= post_comment.user.name %></span>
    <span><%= post_comment.created_at.strftime('<span style="font-size: 10px;">%Y/%m/%d</span>').html_safe %></span>
  </div>
  <div class="mb-2">
    <span><%= post_comment.comment %></span>
    <span>
      <% if post_comment.user == current_user %>
        <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete, remote: true, class: "btn btn-sm btn-danger" %>
      <% end %>
    </span>
  </div>
<% end %>
  