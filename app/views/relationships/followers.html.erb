<div class="container mt-3">
  <div class="row">
    <div class="col-md-8 mx-auto">
      
      <% if @user == current_user %>
        <h2>自分をフォローしているユーザー</h2>
      <% else %>
        <h2>「<%= @user.name %>」さんをフォローしているユーザー</h2>
      <% end %>
      
      <%= render 'follow_list', users: @users %>
    </div>
  </div>
</div>