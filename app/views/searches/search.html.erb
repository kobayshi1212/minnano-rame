<div class="container">
  <div class="row justify-content-center">
    <% if @range == "User" %>
      <div class="col-md-4 mx-auto">
        <h2 class="mt-3 text-center">ユーザー検索結果</h2>
        <% if @users.present? %>
          <% @users.each do |user| %>
            <table class="table">
              <tr>
                <td>
                  <%= link_to user_path(user) do %>
                    <%= image_tag user.get_profile_image, alt: "image", class: "img-fluid rounded-circle", style: "width: 50px; height: 50px;" %>
                  <% end %>
                </td>
                <td class="text-align-cneter"><%= user.name %></td>
                <td><%= render 'relationships/btn', user: user %></td>
              </tr>
            </table>
          <% end %>
        <% else %>
          <div class="mt-5 text-center">
            <p>ユーザーが見つかりませんでした</p>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="col-md-7 mx-auto">
        <h2 class="mt-3 mb-4 text-center">投稿検索</h2>
        <% if @posts.present? %>
          <% @posts.each do |post| %>
            <%= link_to post_path(post.id) do %>
              <%= image_tag post.get_image, style: "width: 150px;" %>
            <% end %>
          <% end %>
        <% else %>
          <div class="mt-5 text-center">
            <p>投稿が見つかりませんでした</p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>