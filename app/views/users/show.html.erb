<div class="container mt-4">
  <div class="row mx-auto">
    <div class="col-md-6 mx-auto text-center">
      <% if current_user == @user %>
        <h2>マイページ</h2>
      <% else %>
        <h2>ユーザー詳細</h2>
      <% end %>
      <div class="d-flex justify-content-center">
        <div class=" rounded-circle" style="width: 100px; height: 100px; overflow: hidden;">
          <%= image_tag @user.get_profile_image, alt: "image", style: "width: 100%; height: 100%;" %>
        </div>
      </div>
      <div class="mt-2">
        <span>
          <%= @user.name %>
          <%= render 'relationships/btn', user: @user %>
        </span>

        <% unless @user.guest_user? || current_user != @user %>  <!-- ゲストユーザー以外の時に編集ボタンを表示させる -->
          <%= link_to edit_user_path(@user) do %>
            <span><i class="fas fa-cog" style="color: #cdcad3;"></i></span>
          <% end %>
        <% end %>
      </div>

      <div>
        <span>
          <%= link_to user_followings_path(@user) do %>
            フォロー<%= @user.followings.count %>人
          <% end %>/
          <%= link_to user_followers_path(@user) do %>
            フォロワー<%= @user.followers.count %>人
          <% end %> /
          <%= link_to "お気に入り", favorites_user_path(@user) %>
        </span>
      </div>
      <div>
        <span>
          total<%= image_tag"ラーメンのアイコン。.jpg", style: "width: 20px; height: 20px;" %><%= @user.posts.count %>杯
          total<i class="far fa-grin-hearts fa-lg" style="color: #cb1515; width: 29px; height: 20px;"></i><%= @user.total_favorites %>件
          total<i class="far fa-comment fa-lg" style="color: #bc2424;"></i><%= @user.total_post_comments %>件
        </span>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="mt-4 mb-2 mx-auto"><%= image_tag "243183860.jpg",class: "img-fluid", width: "1100" %></div>
    <% if @user.posts.empty? %>
      <p class="ml-3" style="font-size: 30px;">投稿がありません</p>
    <% else %>
      <% @user.posts.each do |post| %>
        <div class="col-md-4">
          <div class="card border-danger justify-content-center" style="height: 28rem; border: 15px solid red;">
            <%= link_to post_path(post) do %>
            <div class="card-content" style="height: 100%;">
              <%= image_tag post.get_image, class: "card-img-top img-fluid", style: "max-height: 100%; max-width: 100%; object-fit: contain;" %>
            </div>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

