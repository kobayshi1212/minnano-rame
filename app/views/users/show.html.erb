<% if current_user == @user %>
  <h1>マイページ</h1>
<% else %>
  <h1>ユーザー詳細</h1>
<% end %>

<p><%= image_tag @user.get_profile_image(100,100), class: "rounded-circle" %></p>
<span><%= @user.name %></span>
<% unless @user.guest_user? %>  <!-- ゲストユーザー以外の時に編集ボタンを表示させる -->
  <%= link_to edit_user_path(@user) do %>
    <span><i class="fas fa-cog" style="color: #cdcad3;"></i></span>
  <% end %>
<% end %>
<% @user.posts.each do |post| %>
  <%= link_to post_path(post) do %>
    <p><%= image_tag post.get_image(150,150) %></p>
  <% end %>
<% end %>
