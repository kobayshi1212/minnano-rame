<% if current_user == @user %>
  <h1>マイページ</h1>
<% else %>
  <h1>ユーザー詳細</h1>
<% end %>

<p><%= image_tag @user.get_profile_image(100,100), class: "rounded-circle" %></p>
<div>
  <span>
    <span><%= @user.name %></span>
    <span>
      <%= render 'relationships/btn', user: @user %>
    </span>
    
    <% unless @user.guest_user? || current_user != @user %></span>  <!-- ゲストユーザー以外の時に編集ボタンを表示させる -->
      <%= link_to edit_user_path(@user) do %>
        <span><i class="fas fa-cog" style="color: #cdcad3;"></i></span>
      <% end %>
    <% end %>
  </span>
</div>

<div>
  <span>
    <%= link_to user_followings_path(@user) do %>
      フォロー<%= @user.followings.count %>人
    <% end %>
    <%= link_to user_followers_path(@user) do %>
      フォロワー<%= @user.followers.count %>人
    <% end %>
  </span>
</div>
<div>
  <span>
    投稿数<%= @user.posts.count %>件

  </span>
</div>
<% @user.posts.each do |post| %>
  <%= link_to post_path(post) do %>
    <p><%= image_tag post.get_image(150,150) %></p>
  <% end %>
<% end %>
