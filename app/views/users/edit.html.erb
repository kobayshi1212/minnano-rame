<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2>会員情報編集</h2>
      
      <%= form_with model: @user do |f| %>
        <div class="field">
          <label for="inputName">名前</label><br />
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
        </div>
        
        <div class="field">
          <label for="inputEmail">メールアドレス</label><br />
          <%= f.email_field :email, autofocus: true, id:"inputEmail", placeholder:"メールアドレス" %>
        </div>
        
        <div class="field">  
          <label for="inputimage">プロフィール画像</label><br />
          <%= f.file_field :profile_image, accept: "image/*" %>
        </div>
        
        <div class="actions mt-4">
          <%= f.submit "変更を保存" %>
        </div>
      <% end %>
    </div>
  </div>
</div>