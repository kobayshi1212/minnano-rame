<% if post.favorited_by?(current_user) %>
  <%= link_to post_favorites_path(post), method: :delete, remote: true, class: "text-decoration-none link-dark" do %>
    <i class="far fa-grin-hearts fa-2x" style="color: #cb1515;"></i>
    <span class="text-dark"><%= post.favorites.count %>件</span>
  <% end %>
<% else %>
  <%= link_to post_favorites_path(post), method: :post, remote: true ,class: "text-decoration-none link-dark" do %>
    <i class="fas fa-grin-hearts fa-2x" style="color: #a9acb2;"></i>
    <span class="text-dark"><%= post.favorites.count %>件</span>
  <% end %>
<% end %>